@model ProductListViewModel
@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center">
    <h1 class="display-4">فروشگاه</h1>
</div>
@section Styles {
    <link rel="stylesheet" href="~/css/pr.css" />
}
<div class="product-list">
    @foreach (var product in Model.Products)
    {
        <div class="product-item">
            <h3>@product.p_title</h3>
            <p>قیمت: @product.p_price</p>
            <img src="@product.p_img" alt="@product.p_title" style="width: 200px; height: 200px;" />
        </div>
    }
</div>

<div class="pagination">
    @if (Model.CurrentPage > 1)
    {
        <a asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)">Previous</a>
    }

    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        <a asp-action="Index" asp-route-page="@i" class="@(Model.CurrentPage == i ? "active" : "")">@i</a>
    }

    @if (Model.CurrentPage < Model.TotalPages)
    {
        <a asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)">Next</a>
    }
</div>



